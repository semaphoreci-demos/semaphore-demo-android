    <style name="AppTheme.Subtitle1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.Subtitle2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
